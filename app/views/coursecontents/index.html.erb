

<main>
<div class="container">


<div class="card">
  <h3 class="card-header">Course Details<%= link_to 'Back', login_path %></h3>
  <div class="card-block">


<%#= link_to 'Back', login_path %>
      
<% if current_user.user_access == 1 %>
  
   
    <%= link_to 'Add Course Content', new_coursecontent_path %>
    <br><br>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Course number</th>
            <th>Content name</th>
            <th>Content description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <% @coursecontents.each do |coursecontent| %>
            <td><%= coursecontent.course_id %></td>
            <td><%= coursecontent.content_name %></td>
            <td><%= coursecontent.content_description %></td>
            <td><%= link_to 'Edit', edit_coursecontent_path(coursecontent) %></td>
            <td><%= link_to 'Destroy', coursecontent, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
          </tr>
        </tbody>
      </table>
      <% end %> 

<% else %>    


      <table class="table table-hover">
        <thead>
          <tr>
            <th>Course number</th>
            <th>Content name</th>
            <th>Content description</th>
            <th colspan="3"></th>
          </tr>
        </thead>    

        <tbody>
          <tr>
            <% @coursecontents.each do |coursecontent| %>
            <td><%= coursecontent.course_id %></td>
            <td><%= coursecontent.content_name %></td>
            <td><%= coursecontent.content_description %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

<% end %>

 </div>
</div>
</div>
</main>      
     