
<main>
<div class="container">


<div class="card">
  <h3 class="card-header">My Course</h3>
  <div class="card-block">

<!-- display to user with user access 1 which allows for add, edit or destroy -->
<% if current_user.user_access == 1 %>
  
    <%= link_to 'Add New Course', new_course_path, class: "option" %></a>
    <br><br>
    <!--<strong><%= @user.user_name %> is currently enrolled in:</strong>-->
     
     <!-- table to display course to user -->
     <div class="table-responsive"> 
      <table class="table">
        <thead>
          <tr>
            <th>Course number</th>
            <th>Course name</th>
          </tr>
        </thead>

        <!-- displaying course using variable from controller -->
        <tbody>
          <tr>
            <td><%= @course.id %></td>
            <td><%= @course.course_name %></td>
            <td><%= link_to "Course Info", coursecontents_path, class: "option" %></td>
            <td><%= link_to 'Edit', edit_course_path(id: @course.course_id), class: "option" %></td>
            <td><%#= link_to 'Destroy', course_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "option" %></td>
          </tr>
        </tbody>
      </table>
    </div>


<!-- display to user with user access 2 which allows for view only -->
<% else %>   

      <!-- table to display course to user -->
      <div class="table-responsive">
      <table class="table">
      <thead>
          <tr>
            <th>Course number</th>
            <th>Course name</th>
          </tr>
        </thead>

        <!-- displaying course using variable from controller -->
        <tbody>
          <tr>
            <td><%= @course.id %></td>
            <td><%= @course.course_name %></td>
            <td><%= link_to "Course Info", coursecontents_path, class: "option" %></td>
          </tr>
        </tbody>
      </table>
    </div>

<% end %>
   
</div>
</div>
</div>
</main>