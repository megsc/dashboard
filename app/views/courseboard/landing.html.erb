
<% if current_user.user_access == 1 %>

    <h1>My Course</h1>
    <%= link_to 'Add New Course', new_course_path %>
    <br><br>
    <strong><%= @user.user_name %> is currently enrolled in:</strong>
      
      <table>
        <tbody>
          <tr>
            <td><%= @course.course_name %></td>
            <td><%= link_to "Course Info", coursecontents_path %></td>
            <td><%= link_to 'Edit', edit_course_path(id: @course.course_id) %></td>
            <td><%= link_to 'Destroy', course_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      </table>


<% else %>   

    <h1>My Course</h1>
    <br><br>
    <strong><%= @user.user_name %> is currently enrolled in:</strong>
      
      <table>
        <tbody>
          <tr>
            <td><%= @course.course_name %></td>
            <td><%= link_to "Course Info", coursecontents_path %></td>
          </tr>
        </tbody>
      </table>

<% end %>
   
